<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieList</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Movie List</a>
            </div>
            <ul class="navbar nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Movie" asp-action="Add">Add</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Move" asp-action="Edit">Edit</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Movie" asp-action="Delete">Delete</a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <header class="p-4 mb-3 bg-light border">
            <h1>My Movies</h1>
        </header>
        @RenderBody()
    </div>
</body>
</html>
